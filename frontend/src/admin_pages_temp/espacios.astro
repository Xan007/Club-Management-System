---
import AdminLayout from '../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Espacios - Club del Meta" active="espacios">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Administración</p>
        <h1>Espacios</h1>
        <p class="muted">Selecciona un salón para editarlo y ajusta sus disposiciones con una interfaz más limpia y guiada.</p>
      </div>
      <div class="actions">
        <button id="btnRefrescarEspacios" class="btn secondary">Refrescar</button>
        <a class="btn ghost" href="/admin/login">Cerrar sesión</a>
      </div>
    </header>

    <div class="grid">
      <section class="card">
        <div class="card__header">
          <div>
            <p class="eyebrow">Salones</p>
            <h2>Selecciona un espacio</h2>
          </div>
          <div class="selector">
            <label>
              Salón
              <select id="espacioSelect">
                <option value="">Elegir salón...</option>
              </select>
            </label>
            <span id="estadoBadge" class="pill pill-muted">Sin selección</span>
          </div>
        </div>
      </section>

      <section class="card" id="postsSection" hidden>
        <div class="card__header">
          <div>
            <p class="eyebrow">Blog del salón</p>
            <h2 id="postsSectionTitle">Posts de información</h2>
          </div>
          <button id="btnNuevoPost" class="btn primary">+ Nuevo post</button>
        </div>
        <div id="postsList" class="posts-list">
          <div class="placeholder">Selecciona un salón para ver sus posts.</div>
        </div>
      </section>

      <section class="card" id="postEditorCard" hidden>
        <div class="card__header">
          <div>
            <p class="eyebrow">Editor de post</p>
            <h2 id="postEditorTitle">Nuevo post</h2>
          </div>
          <div class="inline-actions">
            <button id="btnCancelarPost" class="btn ghost">Cancelar</button>
            <button id="btnGuardarPost" class="btn primary">Guardar post</button>
          </div>
        </div>
        <div class="form">
          <div class="form-grid">
            <label>
              Título
              <input id="postTitulo" type="text" placeholder="Título del post" />
            </label>
            <label>
              Slug (URL)
              <input id="postSlug" type="text" placeholder="url-del-post" />
            </label>
            <label class="wide">
              Imagen principal (URL)
              <input id="postImageUrl" type="text" placeholder="https://..." />
            </label>
            <label class="wide">
              Extracto (resumen corto)
              <textarea id="postExcerpt" rows="2" placeholder="Resumen corto para listados..."></textarea>
            </label>
            <label class="wide">
              Contenido (Markdown)
              <textarea id="postContent" rows="12" placeholder="# Título&#10;&#10;Contenido en **Markdown**..."></textarea>
            </label>
            <label class="switch">
              <input type="checkbox" id="postPublicado" />
              <span>Publicado (visible en el sitio web)</span>
            </label>
          </div>
        </div>
      </section>

      <section class="card" id="espacioFormCard">
        <div class="card__header">
          <div>
            <p class="eyebrow">Detalle</p>
            <h2 id="espacioTitulo">Selecciona un salón</h2>
          </div>
          <div class="inline-actions">
            <label class="switch">
              <input type="checkbox" id="espacioActivo" />
              <span>Activo</span>
            </label>
            <button id="btnGuardarEspacio" class="btn primary">Guardar cambios</button>
          </div>
        </div>
        <div id="espacioEmpty" class="placeholder">Elige un salón para mostrar su información.</div>
        <div id="espacioForm" class="form" hidden>
          <div class="form-grid">
            <label>
              Nombre
              <input id="espacioNombre" type="text" placeholder="Nombre del salón" />
            </label>
            <label class="wide">
              Descripción
              <textarea id="espacioDescripcion" rows="3" placeholder="Descripción breve"></textarea>
            </label>
          </div>

          <div class="subcard">
            <div class="subcard__header">
              <div>
                <p class="eyebrow">Disposiciones</p>
                <h3>Capacidades por disposición</h3>
              </div>
              <div class="add-config">
                <select id="nuevaDisposicion"></select>
                <input id="nuevaCapacidad" type="number" min="1" placeholder="Capacidad" />
                <button id="btnAgregarConfig" class="btn secondary">Agregar</button>
              </div>
            </div>
            <div id="configList" class="config-list">
              <div class="placeholder">Sin disposiciones.</div>
            </div>
          </div>
        </div>
      </section>

      <section class="card">
        <div class="card__header">
          <div>
            <p class="eyebrow">Nuevo salón</p>
            <h2>Crear espacio</h2>
          </div>
        </div>
        <div class="form-grid">
          <label>
            Nombre
            <input id="nuevoNombre" type="text" placeholder="Ej. Salón principal" />
          </label>
          <label class="wide">
            Descripción
            <textarea id="nuevoDescripcion" rows="2" placeholder="Opcional"></textarea>
          </label>
          <label class="switch">
            <input type="checkbox" id="nuevoActivo" checked />
            <span>Activo al crear</span>
          </label>
        </div>
        <div class="actions-end">
          <button id="btnCrearEspacio" class="btn primary">Crear salón</button>
        </div>
      </section>

      <section class="card" id="postEditorCard" hidden>
        <div class="card__header">
          <div>
            <p class="eyebrow">Editor de post</p>
            <h2 id="postEditorTitle">Nuevo post</h2>
          </div>
          <div class="inline-actions">
            <button id="btnCancelarPost" class="btn ghost">Cancelar</button>
            <button id="btnGuardarPost" class="btn primary">Guardar post</button>
          </div>
        </div>
        <div class="form">
          <div class="form-grid">
            <label>
              Título
              <input id="postTitulo" type="text" placeholder="Título del post" />
            </label>
            <label>
              Slug (URL)
              <input id="postSlug" type="text" placeholder="url-del-post" />
            </label>
            <label class="wide">
              Imagen principal (URL)
              <input id="postImageUrl" type="text" placeholder="https://..." />
            </label>
            <label class="wide">
              Extracto (resumen corto)
              <textarea id="postExcerpt" rows="2" placeholder="Resumen corto para listados..."></textarea>
            </label>
            <label class="wide">
              Contenido (Markdown)
              <textarea id="postContent" rows="12" placeholder="# Título&#10;&#10;Contenido en **Markdown**..."></textarea>
            </label>
            <label class="switch">
              <input type="checkbox" id="postPublicado" />
              <span>Publicado (visible en el sitio web)</span>
            </label>
          </div>
        </div>
      </section>
    </div>
  </section>
</AdminLayout>

<script is:inline type="module" src="/src/pages/admin/espacios.client.ts"></script>

<style>
  .panel { padding: 2rem; max-width: 1200px; margin: 0 auto 4rem; }
  .panel__header { display: flex; justify-content: space-between; gap: 1rem; align-items: flex-start; }
  .eyebrow { text-transform: uppercase; letter-spacing: 0.08em; font-size: 0.8rem; color: #0a4ba5; margin: 0 0 0.3rem; }
  h1, h2, h3 { margin: 0; color: #0f172a; }
  h3 { font-size: 1.05rem; }
  .muted { color: #4b5563; margin: 0.4rem 0 0; max-width: 640px; }
  .actions { display: flex; gap: 0.5rem; align-items: center; }
  .inline-actions { display: flex; gap: 0.75rem; align-items: center; }
  .grid { display: grid; grid-template-columns: 1fr; gap: 1.2rem; margin-top: 1.5rem; }
  .card { background: #ffffff; border: 1px solid #e5e7eb; border-radius: 16px; padding: 1.25rem; box-shadow: 0 10px 30px rgba(15,23,42,0.06); }
  .card__header { display: flex; justify-content: space-between; gap: 1rem; align-items: center; flex-wrap: wrap; }
  .selector { display: flex; gap: 1rem; align-items: flex-end; flex-wrap: wrap; }
  label { font-size: 0.9rem; color: #4b5563; display: flex; flex-direction: column; gap: 0.25rem; }
  select, input, textarea { border: 1px solid #d1d5db; border-radius: 10px; padding: 0.55rem 0.75rem; font: inherit; background: #ffffff; color: #111827; }
  textarea { resize: vertical; }
  .btn { border: none; border-radius: 10px; padding: 0.65rem 1rem; font-weight: 600; cursor: pointer; font: inherit; transition: transform 0.1s ease, box-shadow 0.2s ease; }
  .btn.primary { background: linear-gradient(135deg, #0a4ba5, #2563eb); color: #fff; box-shadow: 0 10px 20px rgba(37,99,235,0.2); }
  .btn.secondary { background: #eef2ff; color: #1d4ed8; border: 1px solid #dbeafe; }
  .btn.ghost { background: #ffffff; color: #0f172a; border: 1px solid #e5e7eb; }
  .btn:hover { transform: translateY(-1px); }
  .pill { display: inline-flex; align-items: center; gap: 0.3rem; padding: 0.3rem 0.75rem; border-radius: 999px; font-weight: 600; font-size: 0.85rem; border: 1px solid #e5e7eb; }
  .pill-active { background: #ecfdf3; color: #166534; border-color: #bbf7d0; }
  .pill-inactive { background: #fef2f2; color: #b91c1c; border-color: #fecdd3; }
  .pill-muted { background: #f8fafc; color: #6b7280; }
  .placeholder { padding: 1rem; color: #6b7280; text-align: center; border: 1px dashed #e5e7eb; border-radius: 12px; background: #f8fafc; }
  .form { display: grid; gap: 1rem; }
  .form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1rem; }
  .wide { grid-column: 1 / -1; }
  .subcard { border: 1px solid #e5e7eb; border-radius: 12px; padding: 1rem; background: #f8fafc; }
  .subcard__header { display: flex; justify-content: space-between; gap: 1rem; align-items: center; flex-wrap: wrap; }
  .add-config { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; }
  .config-list { display: grid; gap: 0.75rem; margin-top: 0.75rem; }
  :global(.config-card) { display: grid; grid-template-columns: 1fr auto auto; gap: 0.75rem; align-items: center; padding: 0.75rem; border: 1px solid #e5e7eb; border-radius: 10px; background: #ffffff; box-shadow: 0 6px 16px rgba(15,23,42,0.04); }
  :global(.config-card .capacidad) {
    width: 140px;
    text-align: center;
    border-radius: 12px;
    border: 1px solid #c7d2fe;
    background: linear-gradient(135deg, #f8fafc, #eef2ff);
    padding: 0.5rem 0.65rem;
    font-weight: 700;
    color: #0f172a;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.8), 0 6px 12px rgba(59,130,246,0.08);
    transition: border-color 0.15s ease, box-shadow 0.2s ease;
  }
  :global(.config-card .capacidad:focus) { outline: none; border-color: #2563eb; box-shadow: inset 0 1px 0 rgba(255,255,255,0.9), 0 0 0 3px rgba(37,99,235,0.18); }
  :global(.config-card .capacidad::-webkit-outer-spin-button),
  :global(.config-card .capacidad::-webkit-inner-spin-button) { margin: 0; }
  :global(.config-card .capacidad[type='number']) { -moz-appearance: textfield; }
  .config-title { font-weight: 600; color: #0f172a; }
  .actions-end { display: flex; justify-content: flex-end; margin-top: 0.5rem; }
  :global(.link) {
    appearance: none;
    border: 1px solid #dbeafe;
    background: linear-gradient(135deg, #eef2ff, #e0e7ff);
    color: #1d4ed8;
    cursor: pointer;
    padding: 0.45rem 0.65rem;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.9rem;
    box-shadow: 0 6px 12px rgba(37,99,235,0.12);
    transition: transform 0.12s ease, box-shadow 0.2s ease, filter 0.2s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }
  :global(.link:hover) { transform: translateY(-1px); box-shadow: 0 10px 20px rgba(37,99,235,0.18); }
  :global(.link:focus) { outline: 2px solid #bfdbfe; outline-offset: 2px; }
  :global(.link.danger) {
    border-color: #fecdd3;
    background: linear-gradient(135deg, #fff1f2, #ffe4e6);
    color: #b91c1c;
    box-shadow: 0 6px 12px rgba(185,28,28,0.12);
  }
  .switch { display: inline-flex; align-items: center; gap: 0.35rem; font-size: 0.9rem; color: #4b5563; }
  .switch input { width: 18px; height: 18px; }
  .posts-list { display: grid; gap: 0.75rem; margin-top: 0.75rem; }
  :global(.post-card) { display: grid; grid-template-columns: 1fr auto; gap: 1rem; align-items: start; padding: 1rem; border: 1px solid #e5e7eb; border-radius: 12px; background: #ffffff; box-shadow: 0 6px 16px rgba(15,23,42,0.04); transition: box-shadow 0.2s ease; }
  :global(.post-card:hover) { box-shadow: 0 10px 24px rgba(15,23,42,0.08); }
  :global(.post-info) { display: grid; gap: 0.35rem; }
  :global(.post-title) { font-weight: 700; color: #0f172a; font-size: 1.05rem; margin: 0; }
  :global(.post-excerpt) { color: #6b7280; font-size: 0.9rem; margin: 0; }
  :global(.post-meta) { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; }
  :global(.post-status) { display: inline-flex; align-items: center; gap: 0.3rem; padding: 0.2rem 0.5rem; border-radius: 999px; font-weight: 600; font-size: 0.8rem; }
  :global(.post-status.published) { background: #ecfdf3; color: #166534; border: 1px solid #bbf7d0; }
  :global(.post-status.draft) { background: #fef2f2; color: #b91c1c; border: 1px solid #fecdd3; }
  :global(.post-actions) { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; }
  :global(.post-actions .btn) { 
    font-size: 0.85rem; 
    padding: 0.5rem 0.85rem; 
    white-space: nowrap;
    font-weight: 600;
  }
  :global(.post-actions .btn.secondary) {
    background: #eef2ff;
    color: #1d4ed8;
    border: 1px solid #dbeafe;
    box-shadow: 0 4px 10px rgba(37,99,235,0.1);
  }
  :global(.post-actions .btn.secondary:hover) {
    background: #dbeafe;
    box-shadow: 0 6px 14px rgba(37,99,235,0.15);
  }
  :global(.post-actions .btn.ghost) {
    background: #ffffff;
    color: #dc2626;
    border: 1px solid #fecaca;
    box-shadow: 0 4px 10px rgba(220,38,38,0.08);
  }
  :global(.post-actions .btn.ghost:hover) {
    background: #fef2f2;
    border-color: #dc2626;
    box-shadow: 0 6px 14px rgba(220,38,38,0.12);
  }
  @media (max-width: 900px) {
    .panel__header { flex-direction: column; }
    .card__header { flex-direction: column; align-items: flex-start; }
    .config-card { grid-template-columns: 1fr; }
    .inline-actions { width: 100%; justify-content: space-between; }
    :global(.post-card) { grid-template-columns: 1fr; }
  }
</style>
