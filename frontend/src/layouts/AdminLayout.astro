---
import logoCorpmeta from '../assets/logo_corpmeta.png'

interface Props {
  title?: string
  active?: 'reservas' | 'espacios' | 'reportes' | 'login'
}

const { title = 'Panel Admin - Club del Meta', active = 'reservas' } = Astro.props as Props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light;
        --color-primary: #0a4ba5;
        --color-surface: #ffffff;
        --color-bg: #f6f7fb;
        --color-panel: #ffffff;
        --color-card: #ffffff;
        --color-border: #e5e7eb;
        --color-text: #111827;
        --color-muted: #6b7280;
        --color-accent: #22c55e;
      }

      * { box-sizing: border-box; }

      body {
        margin: 0;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
      }

      a { color: inherit; text-decoration: none; }

      .layout {
        display: grid;
        grid-template-columns: 260px 1fr;
        min-height: 100vh;
        background: var(--color-bg);
      }

      .sidebar {
        background: #0a4ba5;
        border-right: 1px solid rgba(255,255,255,0.12);
        padding: 1.5rem 1.25rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: sticky;
        top: 0;
        height: 100vh;
        color: #e8eefc;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        letter-spacing: -0.02em;
      }

      .brand-logo {
        width: 50px;
        height: 50px;
        object-fit: contain;
      }

      nav {
        display: grid;
        gap: 0.35rem;
      }

      .bottom-actions {
        display: grid;
        gap: 0.35rem;
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid rgba(255,255,255,0.12);
      }

      .nav-item {
        padding: 0.75rem 0.85rem;
        border-radius: 10px;
        color: #e8eefc;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.6rem;
        border: 1px solid transparent;
        transition: all 0.15s ease;
        background: none;
        cursor: pointer;
        font-size: 1rem;
        font-family: inherit;
        text-align: left;
        width: 100%;
      }

      .nav-item:hover { color: #fff; border-color: rgba(255,255,255,0.2); background: rgba(255,255,255,0.08); }
      .nav-item.active { color: #0a4ba5; background: #e8eefc; border-color: #dbeafe; }

      .content {
        padding: 2rem 2.5rem;
      }

      @media (max-width: 900px) {
        .layout { grid-template-columns: 1fr; }
        .sidebar { position: relative; height: auto; flex-direction: row; align-items: center; flex-wrap: wrap; }
        nav { grid-template-columns: repeat(auto-fit, minmax(120px, 1fr)); width: 100%; }
        .bottom-actions { width: 100%; margin-top: 1rem; border-top: 1px solid rgba(255,255,255,0.12); padding-top: 1rem; grid-template-columns: 1fr 1fr; }
      }
    </style>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <div class="brand">
          <img src={logoCorpmeta.src} alt="Club del Meta" class="brand-logo" />
          <div>
            <div>Club del Meta</div>
            <small style="color: var(--color-muted);">Panel Admin</small>
          </div>
        </div>
        <nav>
          <a class={`nav-item ${active === 'reservas' ? 'active' : ''}`} href="/admin/reservas">Reservas</a>
          <a class={`nav-item ${active === 'espacios' ? 'active' : ''}`} href="/admin/espacios">Espacios</a>
          <a class={`nav-item ${active === 'reportes' ? 'active' : ''}`} href="/admin/reportes">Reportes</a>
        </nav>
        <div class="bottom-actions">
          <a class="nav-item" href="/" target="_blank" rel="noopener noreferrer">üåê Ver sitio web</a>
          <button class="nav-item" id="logoutBtn">üö™ Cerrar sesi√≥n</button>
        </div>
      </aside>
      <main class="content">
        <slot />
      </main>
    </div>

    <script>
      // Check authentication on page load
      const adminAuth = localStorage.getItem('adminAuth');
      if (!adminAuth) {
        window.location.href = '/admin/login';
      } else {
        try {
          const auth = JSON.parse(adminAuth);
          if (!auth.isAuthenticated || !auth.token) {
            localStorage.removeItem('adminAuth');
            window.location.href = '/admin/login';
          }
        } catch (error) {
          localStorage.removeItem('adminAuth');
          window.location.href = '/admin/login';
        }
      }

      // Logout functionality
      const logoutBtn = document.getElementById('logoutBtn');
      logoutBtn?.addEventListener('click', () => {
        // Clear all authentication data
        localStorage.removeItem('adminAuth');
        sessionStorage.clear();
        
        // Redirect to login
        window.location.href = '/admin/login';
      });
    </script>
  </body>
</html>
