---
import Navbar from '../components/Navbar.astro'

interface Props {
  title?: string
  hideNavbar?: boolean
  fullWidth?: boolean
}

const {
  title = 'Corporación Club del Meta',
  hideNavbar = false,
  fullWidth = false,
} = Astro.props as Props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta
      name="description"
      content="Portal del Club El Meta para reservar salones y espacios exclusivos."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light;
        --color-primary: #0a4ba5;
        --color-secondary: #bfc3c7;
        --color-accent: #c57d3d;
        --color-background: #f4f6f9;
        --color-surface: #ffffff;
        --color-text: #1f2933;
      }

      *, *::before, *::after {
        box-sizing: border-box;
      }

      .layout {
        margin: 0;
        font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--color-background);
        color: var(--color-text);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .main {
        flex: 1;
        width: min(1650px, 95%);
        margin: 0 auto;
        padding: 3rem 0;
      }

      .layout--full {
        background: #07193a;
      }

      .layout--full .main {
        width: 100%;
        margin: 0;
        padding: 0;
      }

      footer {
        text-align: center;
        padding: 1.5rem;
        background: var(--color-secondary);
        color: #0f172a;
        font-size: 0.85rem;
        letter-spacing: 0.02em;
      }

      a {
        color: inherit;
      }
    </style>
  </head>
  <body class={fullWidth ? 'layout layout--full' : 'layout'}>
    {!hideNavbar && <Navbar />}
    <main class={fullWidth ? 'main main--full' : 'main'}>
      <slot />
    </main>
    <footer>© Corporación Club del Meta - Todos los derechos reservados.</footer>
  </body>
</html>
