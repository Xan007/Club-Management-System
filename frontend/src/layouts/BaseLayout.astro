---
import Navbar from '../components/Navbar.astro'

interface Props {
  title?: string
  hideNavbar?: boolean
  fullWidth?: boolean
}

const {
  title = 'Corporación Club del Meta',
  hideNavbar = false,
  fullWidth = false,
} = Astro.props as Props
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta
      name="description"
      content="Portal del Club El Meta para reservar salones y espacios exclusivos."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light;
        --color-primary: #0a4ba5;
        --color-secondary: #bfc3c7;
        --color-accent: #c57d3d;
        --color-background: #f4f6f9;
        --color-surface: #ffffff;
        --color-text: #1f2933;
      }

      *, *::before, *::after {
        box-sizing: border-box;
      }

      .layout {
        margin: 0;
        font-family: 'Poppins', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background: var(--color-background);
        color: var(--color-text);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .main {
        flex: 1;
        width: min(1650px, 95%);
        margin: 0 auto;
        padding: 3rem 0;
      }

      .layout--full {
        background: #07193a;
      }

      .layout--full .main {
        width: 100%;
        margin: 0;
        padding: 0;
      }

      footer {
        background: #1f2937;
        color: #f9fafb;
        padding: 3rem 2rem 2rem;
        font-size: 0.9rem;
      }

      .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 3rem;
        text-align: left;
      }

      .footer-section h3 {
        font-size: 1.25rem;
        margin: 0 0 1rem;
        font-weight: 600;
        color: #ffffff;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .footer-section p {
        margin: 0.5rem 0;
        line-height: 1.7;
        color: #d1d5db;
      }

      .footer-section a {
        color: #93c5fd;
        text-decoration: none;
        transition: color 0.2s ease;
      }

      .footer-section a:hover {
        color: #60a5fa;
      }

      .social-icons {
        display: flex;
        gap: 0.85rem;
        margin-top: 1rem;
      }

      .social-icons a {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: transform 0.2s ease, background 0.2s ease;
      }

      .social-icons a:hover {
        transform: translateY(-3px);
      }

      .social-icons .facebook {
        background: #3b5998;
      }

      .social-icons .facebook:hover {
        background: #2d4373;
      }

      .social-icons .google {
        background: #dd4b39;
      }

      .social-icons .google:hover {
        background: #c23321;
      }

      .social-icons .flickr {
        background: #ff0084;
      }

      .social-icons .flickr:hover {
        background: #cc006a;
      }

      .footer-copyright {
        text-align: center;
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 0.875rem;
        color: #9ca3af;
      }

      @media (max-width: 768px) {
        footer {
          padding: 2.5rem 1.5rem 1.5rem;
        }

        .footer-container {
          grid-template-columns: 1fr;
          gap: 2rem;
          text-align: center;
        }

        .social-icons {
          justify-content: center;
        }
      }

      a {
        color: inherit;
      }
    </style>
  </head>
  <body class={fullWidth ? 'layout layout--full' : 'layout'}>
    {!hideNavbar && <Navbar />}
    <main class={fullWidth ? 'main main--full' : 'main'}>
      <slot />
    </main>
    <footer>
      <div class="footer-container">
        <div class="footer-section">
          <h3>Teléfonos</h3>
          <p>(8) 6 64 11 15 - 312 4347893</p>
          <p>EVENTOS: 310 8874473 - 312 4350412</p>
          <p>COMPRAS: 310 8771304</p>
          <p>CARTERA: 313 2349780</p>
          <p>OPERACIONES: 313 4660698</p>
        </div>
        <div class="footer-section">
          <h3>Dirección</h3>
          <p>CALLE 48A CARRERA 30</p>
          <p>BARRIO CIUDAD ORIENTAL</p>
          <p>VILLAVICENCIO - META</p>
          <div class="social-icons">
            <a href="#" class="facebook" aria-label="Facebook">
              <svg width="20" height="20" fill="white" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
            <a href="#" class="google" aria-label="Google">
              <svg width="20" height="20" fill="white" viewBox="0 0 24 24">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
            </a>
            <a href="#" class="flickr" aria-label="Flickr">
              <svg width="20" height="20" fill="white" viewBox="0 0 24 24">
                <circle cx="6.5" cy="12" r="3.5"/>
                <circle cx="17.5" cy="12" r="3.5"/>
              </svg>
            </a>
          </div>
        </div>
        <div class="footer-section">
          <h3>Email</h3>
          <p>
            <a href="mailto:comunicaciones@clubelmeta.com">comunicaciones@clubelmeta.com</a>
          </p>
          <p>
            <a href="mailto:secretaria@clubelmeta.com">secretaria@clubelmeta.com</a>
          </p>
        </div>
      </div>
      <div class="footer-copyright">
        © Corporación Club del Meta - Todos los derechos reservados.
      </div>
    </footer>
  </body>
</html>
