---
import AdminLayout from '../../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Nuevo Evento - Club del Meta" active="eventos">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Crear Evento</p>
        <h1>Nuevo Evento</h1>
        <p class="muted">Completa el formulario para crear un nuevo evento.</p>
      </div>
      <div class="actions">
        <a href="/admin/eventos" class="btn ghost">← Volver</a>
      </div>
    </header>

    <section class="card">
      <form id="eventoForm" class="form-grid">
        <label class="wide">
          Título *
          <input id="eventoTitulo" type="text" placeholder="Título del evento" required />
        </label>
        
        <label class="wide">
          Salón asociado
          <select id="eventoEspacio">
            <option value="">Ninguno</option>
          </select>
        </label>

        <div class="wide">
          <label>
            Contenido (Markdown) *
            <div id="editorContainer"></div>
          </label>
        </div>

        <!-- Gestión de imágenes -->
        <div class="wide images-section">
          <div class="images-header">
            <div>
              <p class="eyebrow">Galería</p>
              <h3>Imágenes del evento</h3>
            </div>
            <div class="upload-actions">
              <input type="file" id="fileInput" accept="image/*" multiple hidden />
              <button type="button" id="btnSubirArchivo" class="btn secondary">Subir Imágenes</button>
            </div>
          </div>
          
          <div id="imagenesContainer" class="imagenes-grid">
            <div class="placeholder">No hay imágenes. Sube archivos para comenzar.</div>
          </div>

          <div id="uploadProgress" class="upload-progress" style="display: none;">
            <div class="progress-bar">
              <div id="progressBar" class="progress-fill"></div>
            </div>
            <p id="progressText">Subiendo...</p>
          </div>
        </div>

        <div class="wide form-actions">
          <a href="/admin/eventos" class="btn ghost">Cancelar</a>
          <button type="submit" class="btn primary">Crear Evento</button>
        </div>
      </form>
    </section>
  </section>

  <!-- Toast notifications -->
  <div id="toastContainer" class="toast-container"></div>
</AdminLayout>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.css">
<script src="https://cdn.jsdelivr.net/npm/easymde/dist/easymde.min.js"></script>
<script is:inline type="module" src="/src/pages/admin/eventos/nuevo.client.ts"></script>

<style>
  .panel { padding: 2rem; max-width: 1200px; margin: 0 auto 4rem; }
  .panel__header { display: flex; justify-content: space-between; gap: 1rem; align-items: flex-start; }
  .eyebrow { text-transform: uppercase; letter-spacing: 0.08em; font-size: 0.8rem; color: #0a4ba5; margin: 0 0 0.3rem; }
  h1, h2, h3 { margin: 0; color: #0f172a; }
  h3 { font-size: 1.05rem; }
  .muted { color: #4b5563; margin: 0.4rem 0 0; max-width: 640px; }
  .actions { display: flex; gap: 0.5rem; align-items: center; }
  .card { background: #ffffff; border: 1px solid #e5e7eb; border-radius: 16px; padding: 2rem; box-shadow: 0 10px 30px rgba(15,23,42,0.06); }
  label { font-size: 0.9rem; color: #4b5563; display: flex; flex-direction: column; gap: 0.25rem; font-weight: 600; }
  select, input, textarea { border: 1px solid #d1d5db; border-radius: 10px; padding: 0.65rem 0.85rem; font: inherit; background: #ffffff; color: #111827; transition: border-color 0.2s; }
  select:focus, input:focus, textarea:focus { outline: none; border-color: #0a4ba5; box-shadow: 0 0 0 3px rgba(10, 75, 165, 0.1); }
  textarea { resize: vertical; font-family: 'Consolas', 'Monaco', monospace; }
  
  /* Editor EasyMDE */
  #editorContainer { margin-top: 0.25rem; }
  :global(.EasyMDEContainer) { border-radius: 10px; overflow: hidden; }
  :global(.EasyMDEContainer .CodeMirror) { border-radius: 0 0 10px 10px; border: 1px solid #d1d5db; min-height: 300px; font-family: 'Consolas', 'Monaco', monospace; }
  :global(.EasyMDEContainer .editor-toolbar) { border-radius: 10px 10px 0 0; border: 1px solid #d1d5db; border-bottom: none; background: #f8fafc; }
  :global(.EasyMDEContainer .editor-toolbar button) { color: #4b5563 !important; }
  :global(.EasyMDEContainer .editor-toolbar button:hover) { background: #e5e7eb !important; border-color: #d1d5db !important; }
  :global(.EasyMDEContainer .editor-toolbar button.active) { background: #dbeafe !important; border-color: #0a4ba5 !important; color: #0a4ba5 !important; }
  :global(.EasyMDEContainer .CodeMirror-focused) { border-color: #0a4ba5; box-shadow: 0 0 0 3px rgba(10, 75, 165, 0.1); }
  .btn { border: none; border-radius: 10px; padding: 0.65rem 1rem; font-weight: 600; cursor: pointer; font: inherit; transition: all 0.2s ease; text-decoration: none; display: inline-flex; align-items: center; justify-content: center; }
  .btn.primary { background: linear-gradient(135deg, #0a4ba5, #2563eb); color: #fff; box-shadow: 0 10px 20px rgba(37,99,235,0.2); }
  .btn.primary:hover { transform: translateY(-2px); box-shadow: 0 12px 24px rgba(37,99,235,0.3); }
  .btn.secondary { background: #eef2ff; color: #1d4ed8; border: 1px solid #dbeafe; }
  .btn.secondary:hover { background: #dbeafe; transform: translateY(-1px); }
  .btn.ghost { background: #ffffff; color: #0f172a; border: 1px solid #e5e7eb; }
  .btn.ghost:hover { background: #f9fafb; transform: translateY(-1px); }
  .placeholder { padding: 1rem; color: #6b7280; text-align: center; border: 1px dashed #e5e7eb; border-radius: 12px; background: #f8fafc; }
  .form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.25rem; }
  .wide { grid-column: 1 / -1; }
  .switch { display: inline-flex; align-items: center; gap: 0.5rem; font-size: 0.9rem; color: #4b5563; cursor: pointer; }
  .switch input { width: 18px; height: 18px; cursor: pointer; }
  .form-actions { display: flex; gap: 1rem; justify-content: flex-end; padding-top: 0.5rem; border-top: 1px solid #e5e7eb; margin-top: 0.5rem; }
  
  /* Images section */
  .images-section { border: 1px solid #e5e7eb; border-radius: 12px; padding: 1.25rem; background: #f8fafc; }
  .images-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem; }
  .images-header h3 { margin: 0; font-size: 1rem; color: #0f172a; }
  .upload-actions { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  .imagenes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 1rem; margin-bottom: 1rem; }
  
  :global(.imagen-item) { position: relative; aspect-ratio: 4/3; border-radius: 8px; overflow: hidden; border: 2px solid #e5e7eb; background: #f1f5f9; transition: all 0.2s; }
  :global(.imagen-item:hover) { border-color: #0a4ba5; transform: translateY(-2px); box-shadow: 0 4px 12px rgba(10, 75, 165, 0.2); }
  :global(.imagen-item img) { width: 100%; height: 100%; object-fit: cover; }
  :global(.imagen-item .imagen-overlay) { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 50%); display: flex; flex-direction: column; justify-content: flex-end; padding: 0.5rem; opacity: 0; transition: opacity 0.2s; }
  :global(.imagen-item:hover .imagen-overlay) { opacity: 1; }
  :global(.imagen-item .imagen-actions) { display: flex; gap: 0.25rem; justify-content: flex-end; }
  :global(.imagen-item .btn-icon) { background: rgba(255,255,255,0.9); border: none; padding: 0.4rem 0.6rem; border-radius: 6px; cursor: pointer; font-size: 0.85rem; transition: all 0.2s; font-weight: 600; }
  :global(.imagen-item .btn-icon:hover) { background: white; transform: scale(1.05); }
  :global(.imagen-item .btn-icon.danger) { color: #dc2626; }
  :global(.imagen-item input) { position: absolute; top: 0.5rem; left: 0.5rem; right: 0.5rem; font-size: 0.75rem; padding: 0.25rem 0.5rem; background: rgba(255,255,255,0.95); border: 1px solid #e5e7eb; border-radius: 4px; }
  
  /* Upload progress */
  .upload-progress { margin-top: 1rem; }
  .progress-bar { width: 100%; height: 8px; background: #e5e7eb; border-radius: 4px; overflow: hidden; }
  .progress-fill { height: 100%; background: linear-gradient(90deg, #0a4ba5, #2563eb); transition: width 0.3s; border-radius: 4px; }
  .upload-progress p { margin: 0.5rem 0 0; font-size: 0.875rem; color: #64748b; text-align: center; }
  
  /* Toast notifications */
  .toast-container { position: fixed; top: 1rem; right: 1rem; z-index: 2000; display: flex; flex-direction: column; gap: 0.5rem; max-width: 400px; }
  :global(.toast) { background: white; border-radius: 8px; padding: 1rem 1.25rem; box-shadow: 0 10px 30px rgba(0,0,0,0.2); display: flex; align-items: center; gap: 0.75rem; border-left: 4px solid #0a4ba5; animation: slideIn 0.3s ease; }
  :global(.toast.success) { border-left-color: #22c55e; }
  :global(.toast.error) { border-left-color: #dc2626; }
  :global(.toast.warning) { border-left-color: #f59e0b; }
  :global(.toast-icon) { font-size: 1.25rem; }
  :global(.toast.success .toast-icon) { color: #22c55e; }
  :global(.toast.error .toast-icon) { color: #dc2626; }
  :global(.toast.warning .toast-icon) { color: #f59e0b; }
  :global(.toast-message) { flex: 1; color: #0f172a; font-size: 0.9rem; }
  :global(.toast-close) { background: none; border: none; color: #64748b; cursor: pointer; font-size: 1.25rem; padding: 0; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; border-radius: 4px; transition: all 0.2s; }
  :global(.toast-close:hover) { background: #f1f5f9; color: #0f172a; }
  @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
  @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
  :global(.toast.removing) { animation: slideOut 0.3s ease forwards; }
  
  @media (max-width: 900px) {
    .panel__header { flex-direction: column; }
    .form-grid { grid-template-columns: 1fr; }
    .imagenes-grid { grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); }
  }
</style>
