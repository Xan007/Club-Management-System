---
import AdminLayout from '../../layouts/AdminLayout.astro'

export const prerender = false
---

<AdminLayout title="Eventos - Club del Meta" active="eventos">
  <section class="panel">
    <header class="panel__header">
      <div>
        <p class="eyebrow">Administración</p>
        <h1>Eventos</h1>
        <p class="muted">Gestiona los eventos que aparecen en la página pública. Puedes crear, editar y eliminar eventos con imágenes.</p>
      </div>
      <div class="actions">
        <button id="btnNuevoEvento" class="btn primary">+ Nuevo Evento</button>
        <button id="btnRefrescar" class="btn secondary">Refrescar</button>
      </div>
    </header>

    <!-- Lista de eventos -->
    <section class="card">
      <div class="card__header">
        <div>
          <p class="eyebrow">Eventos publicados</p>
          <h2>Todos los eventos</h2>
        </div>
      </div>
      <div id="eventosList" class="posts-list">
        <div class="placeholder">Cargando eventos...</div>
      </div>
    </section>
  </section>

  <!-- Toast notifications -->
  <div id="toastContainer" class="toast-container"></div>
</AdminLayout>

<script is:inline type="module" src="/src/pages/admin/eventos.client.ts"></script>

<style>
  .panel { padding: 2rem; max-width: 1200px; margin: 0 auto 4rem; }
  .panel__header { display: flex; justify-content: space-between; gap: 1rem; align-items: flex-start; }
  .eyebrow { text-transform: uppercase; letter-spacing: 0.08em; font-size: 0.8rem; color: #0a4ba5; margin: 0 0 0.3rem; }
  h1, h2, h3 { margin: 0; color: #0f172a; }
  h3 { font-size: 1.05rem; }
  .muted { color: #4b5563; margin: 0.4rem 0 0; max-width: 640px; }
  .actions { display: flex; gap: 0.5rem; align-items: center; }
  .inline-actions { display: flex; gap: 0.75rem; align-items: center; }
  .grid { display: grid; grid-template-columns: 1fr; gap: 1.2rem; margin-top: 1.5rem; }
  .card { background: #ffffff; border: 1px solid #e5e7eb; border-radius: 16px; padding: 1.25rem; box-shadow: 0 10px 30px rgba(15,23,42,0.06); }
  .card__header { display: flex; justify-content: space-between; gap: 1rem; align-items: center; flex-wrap: wrap; }
  label { font-size: 0.9rem; color: #4b5563; display: flex; flex-direction: column; gap: 0.25rem; }
  select, input, textarea { border: 1px solid #d1d5db; border-radius: 10px; padding: 0.55rem 0.75rem; font: inherit; background: #ffffff; color: #111827; }
  textarea { resize: vertical; }
  .btn { border: none; border-radius: 10px; padding: 0.65rem 1rem; font-weight: 600; cursor: pointer; font: inherit; transition: transform 0.1s ease, box-shadow 0.2s ease; }
  .btn.primary { background: linear-gradient(135deg, #0a4ba5, #2563eb); color: #fff; box-shadow: 0 10px 20px rgba(37,99,235,0.2); }
  .btn.secondary { background: #eef2ff; color: #1d4ed8; border: 1px solid #dbeafe; }
  .btn.ghost { background: #ffffff; color: #0f172a; border: 1px solid #e5e7eb; }
  .btn:hover { transform: translateY(-1px); }
  .placeholder { padding: 1rem; color: #6b7280; text-align: center; border: 1px dashed #e5e7eb; border-radius: 12px; background: #f8fafc; }
  .form { display: grid; gap: 1rem; }
  .form-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1rem; }
  .wide { grid-column: 1 / -1; }
  .subcard { border: 1px solid #e5e7eb; border-radius: 12px; padding: 1rem; background: #f8fafc; }
  .subcard__header { display: flex; justify-content: space-between; gap: 1rem; align-items: center; flex-wrap: wrap; margin-bottom: 0.75rem; }
  .add-config { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; margin-top: 0.75rem; }
  .config-list { display: grid; gap: 0.75rem; }
  .switch { display: inline-flex; align-items: center; gap: 0.35rem; font-size: 0.9rem; color: #4b5563; }
  .switch input { width: 18px; height: 18px; }
  .posts-list { display: grid; gap: 0.75rem; margin-top: 0.75rem; }
  :global(.post-card) { display: grid; grid-template-columns: 100px 1fr auto; gap: 1rem; align-items: start; padding: 1rem; border: 1px solid #e5e7eb; border-radius: 12px; background: #ffffff; box-shadow: 0 6px 16px rgba(15,23,42,0.04); transition: box-shadow 0.2s ease; }
  :global(.post-card:hover) { box-shadow: 0 10px 24px rgba(15,23,42,0.08); }
  :global(.post-card img) { width: 100px; height: 75px; object-fit: cover; border-radius: 8px; background: #f1f5f9; }
  :global(.post-info) { display: grid; gap: 0.35rem; }
  :global(.post-title) { font-weight: 700; color: #0f172a; font-size: 1.05rem; margin: 0; }
  :global(.post-excerpt) { color: #6b7280; font-size: 0.9rem; margin: 0; }
  :global(.post-meta) { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; font-size: 0.85rem; }
  :global(.post-status) { display: inline-flex; align-items: center; gap: 0.3rem; padding: 0.2rem 0.5rem; border-radius: 999px; font-weight: 600; font-size: 0.8rem; }
  :global(.post-status.published) { background: #ecfdf3; color: #166534; border: 1px solid #bbf7d0; }
  :global(.post-status.draft) { background: #fef2f2; color: #b91c1c; border: 1px solid #fecdd3; }
  :global(.post-actions) { display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap; }
  :global(.post-actions .btn) { 
    font-size: 0.85rem; 
    padding: 0.5rem 0.85rem; 
    white-space: nowrap;
    font-weight: 600;
  }
  :global(.post-actions .btn.secondary) {
    background: #eef2ff;
    color: #1d4ed8;
    border: 1px solid #dbeafe;
    box-shadow: 0 4px 10px rgba(37,99,235,0.1);
  }
  :global(.post-actions .btn.secondary:hover) {
    background: #dbeafe;
    box-shadow: 0 6px 14px rgba(37,99,235,0.15);
  }
  :global(.post-actions .btn.ghost) {
    background: #ffffff;
    color: #dc2626;
    border: 1px solid #fecaca;
    box-shadow: 0 4px 10px rgba(220,38,38,0.08);
  }
  :global(.post-actions .btn.ghost:hover) {
    background: #fef2f2;
    border-color: #dc2626;
    box-shadow: 0 6px 14px rgba(220,38,38,0.12);
  }
  :global(.post-actions .btn) {
    cursor: pointer;
    pointer-events: auto;
  }
  :global(.imagen-card) { display: grid; grid-template-columns: 100px 1fr auto; gap: 0.75rem; align-items: center; padding: 0.75rem; border: 1px solid #e5e7eb; border-radius: 10px; background: #ffffff; }
  :global(.imagen-card img) { width: 100px; height: 70px; object-fit: cover; border-radius: 6px; background: #f1f5f9; }
  :global(.imagen-card input) { font-size: 0.9rem; }
  
  /* Modal styles */
  .hidden { display: none !important; }
  .modal { position: fixed; inset: 0; z-index: 9999; display: flex; align-items: center; justify-content: center; padding: 1.5rem; }
  .modal-overlay { position: fixed; inset: 0; background: rgba(9, 12, 28, 0.65); backdrop-filter: blur(6px); z-index: 9998; }
  .modal-content { position: relative; background: linear-gradient(180deg, #ffffff 0%, #f8fbff 100%); border-radius: 20px; border: 1px solid #e2e8f0; box-shadow: 0 30px 80px rgba(15,23,42,0.25); max-width: 960px; width: min(960px, 95vw); max-height: 90vh; display: flex; flex-direction: column; z-index: 10000; overflow: hidden; }
  .modal:not(.hidden) .modal-content { animation: modalIn 0.25s ease; }
  .modal-large { max-width: 1200px; }
  .modal-header { padding: 1.5rem 1.75rem; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center; background: #f8fafc; }
  .modal-header h2 { margin: 0; font-size: 1.4rem; color: #0f172a; }
  .btn-close { background: none; border: none; font-size: 1.5rem; color: #64748b; cursor: pointer; padding: 0.25rem 0.5rem; border-radius: 6px; transition: all 0.2s; }
  .btn-close:hover { background: #f1f5f9; color: #0f172a; }
  .modal-body { padding: 1.75rem; overflow-y: auto; flex: 1; }
  .modal-footer { padding: 1.25rem 1.75rem; border-top: 1px solid #e5e7eb; display: flex; justify-content: flex-end; gap: 0.75rem; background: #f8fafc; }
  @keyframes modalIn { from { opacity: 0; transform: translateY(20px) scale(0.98); } to { opacity: 1; transform: translateY(0) scale(1); } }
  :global(body.modal-open) { overflow: hidden; }
  
  /* Images section */
  .images-section { border: 1px solid #e5e7eb; border-radius: 12px; padding: 1.25rem; background: #f8fafc; }
  .images-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem; }
  .images-header h3 { margin: 0; font-size: 1rem; color: #0f172a; }
  .upload-actions { display: flex; gap: 0.5rem; flex-wrap: wrap; }
  .imagenes-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(140px, 1fr)); gap: 1rem; margin-bottom: 1rem; }
  
  :global(.imagen-item) { position: relative; aspect-ratio: 4/3; border-radius: 8px; overflow: hidden; border: 2px solid #e5e7eb; background: #f1f5f9; transition: all 0.2s; cursor: pointer; }
  :global(.imagen-item:hover) { border-color: #0a4ba5; transform: translateY(-2px); box-shadow: 0 4px 12px rgba(10, 75, 165, 0.2); }
  :global(.imagen-item img) { width: 100%; height: 100%; object-fit: cover; }
  :global(.imagen-item .imagen-overlay) { position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, transparent 50%); display: flex; flex-direction: column; justify-content: flex-end; padding: 0.5rem; opacity: 0; transition: opacity 0.2s; }
  :global(.imagen-item:hover .imagen-overlay) { opacity: 1; }
  :global(.imagen-item .imagen-actions) { display: flex; gap: 0.25rem; justify-content: flex-end; }
  :global(.imagen-item .btn-icon) { background: rgba(255,255,255,0.9); border: none; padding: 0.4rem; border-radius: 6px; cursor: pointer; font-size: 0.9rem; transition: all 0.2s; }
  :global(.imagen-item .btn-icon:hover) { background: white; transform: scale(1.1); }
  :global(.imagen-item .btn-icon.danger) { color: #dc2626; }
  :global(.imagen-item input) { position: absolute; top: 0.5rem; left: 0.5rem; right: 0.5rem; font-size: 0.75rem; padding: 0.25rem 0.5rem; background: rgba(255,255,255,0.95); border: 1px solid #e5e7eb; border-radius: 4px; }
  
  /* Upload progress */
  .upload-progress { margin-top: 1rem; }
  .progress-bar { width: 100%; height: 8px; background: #e5e7eb; border-radius: 4px; overflow: hidden; }
  .progress-fill { height: 100%; background: linear-gradient(90deg, #0a4ba5, #2563eb); transition: width 0.3s; border-radius: 4px; }
  .upload-progress p { margin: 0.5rem 0 0; font-size: 0.875rem; color: #64748b; text-align: center; }
  
  /* Galería grid */
  .galeria-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 1rem; max-height: 60vh; overflow-y: auto; }
  :global(.galeria-item) { position: relative; aspect-ratio: 4/3; border-radius: 8px; overflow: hidden; border: 2px solid transparent; cursor: pointer; transition: all 0.2s; }
  :global(.galeria-item:hover) { border-color: #0a4ba5; transform: translateY(-2px); box-shadow: 0 4px 12px rgba(10, 75, 165, 0.2); }
  :global(.galeria-item.selected) { border-color: #22c55e; box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.2); }
  :global(.galeria-item img) { width: 100%; height: 100%; object-fit: cover; }
  :global(.galeria-item .check-icon) { position: absolute; top: 0.5rem; right: 0.5rem; background: #22c55e; color: white; border-radius: 50%; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; font-size: 0.875rem; opacity: 0; transition: opacity 0.2s; }
  :global(.galeria-item.selected .check-icon) { opacity: 1; }
  
  /* Toast notifications */
  .toast-container { position: fixed; top: 1rem; right: 1rem; z-index: 2000; display: flex; flex-direction: column; gap: 0.5rem; max-width: 400px; }
  :global(.toast) { background: white; border-radius: 8px; padding: 1rem 1.25rem; box-shadow: 0 10px 30px rgba(0,0,0,0.2); display: flex; align-items: center; gap: 0.75rem; border-left: 4px solid #0a4ba5; animation: slideIn 0.3s ease; }
  :global(.toast.success) { border-left-color: #22c55e; }
  :global(.toast.error) { border-left-color: #dc2626; }
  :global(.toast.warning) { border-left-color: #f59e0b; }
  :global(.toast-icon) { font-size: 1.25rem; }
  :global(.toast.success .toast-icon) { color: #22c55e; }
  :global(.toast.error .toast-icon) { color: #dc2626; }
  :global(.toast.warning .toast-icon) { color: #f59e0b; }
  :global(.toast-message) { flex: 1; color: #0f172a; font-size: 0.9rem; }
  :global(.toast-close) { background: none; border: none; color: #64748b; cursor: pointer; font-size: 1.25rem; padding: 0; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; border-radius: 4px; transition: all 0.2s; }
  :global(.toast-close:hover) { background: #f1f5f9; color: #0f172a; }
  @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
  @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
  :global(.toast.removing) { animation: slideOut 0.3s ease forwards; }
  
  /* Danger button style */
  .btn.danger { background: linear-gradient(135deg, #dc2626, #b91c1c); color: #fff; box-shadow: 0 10px 20px rgba(220, 38, 38, 0.25); }
  .btn.danger:hover { background: linear-gradient(135deg, #b91c1c, #991b1b); box-shadow: 0 12px 24px rgba(220, 38, 38, 0.3); transform: translateY(-2px); }
  
  /* Modal de confirmación moderno */
  :global(.confirm-modal) { 
    position: fixed !important; 
    inset: 0 !important; 
    z-index: 10001 !important; 
    display: flex !important; 
    align-items: center !important; 
    justify-content: center !important; 
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  :global(.confirm-modal.show) { opacity: 1; }
  :global(.confirm-modal .modal-overlay) { 
    position: fixed; 
    inset: 0; 
    background: rgba(15, 23, 42, 0.75); 
    backdrop-filter: blur(8px); 
    z-index: 10000; 
  }
  :global(.confirm-modal .confirm-content) { 
    position: relative; 
    max-width: 440px; 
    width: 100%; 
    background: white; 
    border-radius: 24px; 
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.4); 
    z-index: 10002; 
    overflow: hidden;
    transform: scale(0.95);
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  :global(.confirm-modal.show .confirm-content) { transform: scale(1); }
  :global(.confirm-modal .confirm-icon-wrapper) { 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    padding: 2rem 1.5rem 0;
  }
  :global(.confirm-modal .confirm-icon) { 
    width: 80px; 
    height: 80px; 
    background: linear-gradient(135deg, #fee2e2, #fecaca); 
    border-radius: 50%; 
    display: flex; 
    align-items: center; 
    justify-content: center;
    animation: scaleIn 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  }
  :global(.confirm-modal .confirm-icon svg) { 
    width: 48px; 
    height: 48px; 
    stroke: #dc2626; 
    stroke-width: 2.5;
  }
  :global(.confirm-modal .modal-header) { 
    padding: 1.25rem 1.75rem 0.75rem; 
    text-align: center;
    border: none;
    background: transparent;
  }
  :global(.confirm-modal .modal-header h2) { 
    margin: 0; 
    font-size: 1.5rem; 
    color: #0f172a; 
    font-weight: 700; 
  }
  :global(.confirm-modal .modal-header .btn-close) {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: #f1f5f9;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    font-size: 1.25rem;
    color: #64748b;
    transition: all 0.2s;
  }
  :global(.confirm-modal .modal-header .btn-close:hover) {
    background: #e2e8f0;
    color: #0f172a;
    transform: scale(1.05);
  }
  :global(.confirm-modal .modal-body) { 
    padding: 1rem 2rem 2rem; 
    text-align: center; 
  }
  :global(.confirm-modal .confirm-message) { 
    margin: 0; 
    color: #64748b; 
    font-size: 1rem; 
    line-height: 1.6; 
  }
  :global(.confirm-modal .modal-footer) { 
    padding: 0 1.75rem 1.75rem; 
    border: none;
    display: flex; 
    justify-content: center; 
    gap: 0.75rem; 
    background: transparent;
  }
  :global(.confirm-modal .modal-footer .btn) {
    flex: 1;
    max-width: 160px;
    padding: 0.75rem 1.25rem;
    font-weight: 600;
  }
  @keyframes scaleIn { 
    0% { transform: scale(0); opacity: 0; } 
    50% { transform: scale(1.1); }
    100% { transform: scale(1); opacity: 1; } 
  }
  
  @media (max-width: 900px) {
    .panel__header { flex-direction: column; }
    .card__header { flex-direction: column; align-items: flex-start; }
    .inline-actions { width: 100%; justify-content: space-between; }
    :global(.post-card) { grid-template-columns: 1fr; }
    :global(.imagen-card) { grid-template-columns: 1fr; }
    .modal-content { width: 95vw; max-height: 95vh; }
    .imagenes-grid { grid-template-columns: repeat(auto-fill, minmax(100px, 1fr)); }
    .galeria-grid { grid-template-columns: repeat(auto-fill, minmax(120px, 1fr)); }
  }
</style>
