<style>
  .dashboard { display: grid; gap: 1.25rem; }
  .dashboard__header { display: flex; justify-content: space-between; gap: 1rem; align-items: flex-start; flex-wrap: wrap; }
  .eyebrow { text-transform: uppercase; letter-spacing: 0.08em; font-size: 0.8rem; color: #0a4ba5; margin: 0 0 0.35rem; }
  h1, h3 { margin: 0; color: #0f172a; }
  .muted { margin: 0.2rem 0 0; color: #4b5563; max-width: 640px; }
  .filters { display: flex; gap: 0.75rem; align-items: flex-end; flex-wrap: wrap; }
  label { font-size: 0.9rem; color: #4b5563; display: flex; flex-direction: column; gap: 0.25rem; }
  select { border: 1px solid #d1d5db; border-radius: 10px; padding: 0.55rem 0.75rem; font: inherit; background: #ffffff; color: #111827; min-width: 140px; }
  .btn { border: none; border-radius: 10px; padding: 0.65rem 1rem; font-weight: 700; cursor: pointer; font: inherit; transition: transform 0.1s ease, box-shadow 0.2s ease; }
  .btn.secondary { background: #eef2ff; color: #1d4ed8; border: 1px solid #dbeafe; box-shadow: 0 8px 18px rgba(59,130,246,0.12); }
  .btn:hover { transform: translateY(-1px); }

  .kpi-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 0.75rem; }
  .kpi-card { background: linear-gradient(135deg, #0a4ba5, #1e3a8a); color: #eef2ff; border-radius: 16px; padding: 1rem; display: flex; align-items: center; gap: 0.75rem; box-shadow: 0 14px 30px rgba(10,75,165,0.22); }
  .kpi-icon { width: 46px; height: 46px; border-radius: 12px; display: grid; place-items: center; font-size: 1.25rem; font-weight: 700; }
  .kpi-icon.primary { background: rgba(255,255,255,0.14); }
  .kpi-icon.success { background: rgba(34,197,94,0.16); }
  .kpi-icon.warning { background: rgba(234,179,8,0.18); }
  .kpi-icon.danger { background: rgba(239,68,68,0.18); }
  .kpi-label { margin: 0; font-weight: 600; opacity: 0.85; }
  .kpi-value { margin: 0; font-size: 1.6rem; font-weight: 800; letter-spacing: -0.02em; }

  .charts-grid { display: grid; grid-template-columns: 2fr 1.1fr; gap: 1rem; align-items: stretch; }
  .card { background: #ffffff; border: 1px solid #e5e7eb; border-radius: 16px; padding: 1rem; box-shadow: 0 12px 28px rgba(15,23,42,0.08); }
  .card__header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem; }
  .chart-card { min-height: 320px; }

  .calendar-grid { display: grid; gap: 0.5rem; padding: 0.5rem 0; min-height: 320px; }
  .calendar-grid.view-dia { grid-template-columns: repeat(7, 1fr); }
  .calendar-grid.view-mes { grid-template-columns: repeat(4, 1fr); }
  .calendar-grid.view-anio { grid-template-columns: repeat(3, 1fr); }
  :global(.cal-cell) {
    background: #f8fafc;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    min-height: 90px;
    padding: 0.6rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    cursor: pointer;
    transition: border-color 0.15s ease, box-shadow 0.2s ease, transform 0.1s ease;
  }
  :global(.cal-cell:hover) { border-color: #bfdbfe; box-shadow: 0 10px 24px rgba(15,23,42,0.08); transform: translateY(-1px); }
  :global(.cal-cell.has-data) {
    background: #ffffff;
    border-color: #2563eb;
    box-shadow: 0 6px 18px rgba(37,99,235,0.14);
  }
  :global(.cal-cell.has-data:hover) {
    border-color: #0a4ba5;
    box-shadow: 0 12px 28px rgba(10,75,165,0.2);
    transform: translateY(-2px);
  }
  :global(.cal-label) {
    font-size: 0.9rem;
    font-weight: 700;
    color: #0f172a;
    text-align: center;
  }
  :global(.cal-count) {
    background: linear-gradient(135deg, #0a4ba5, #2563eb);
    color: #ffffff;
    font-size: 0.95rem;
    font-weight: 800;
    padding: 0.35rem 0.7rem;
    border-radius: 999px;
    box-shadow: 0 8px 16px rgba(37,99,235,0.24);
    min-width: 32px;
    text-align: center;
  }
  :global(.cal-cell.empty) {
    background: #f9fafb;
    border-style: dashed;
    opacity: 0.4;
    cursor: default;
  }
  :global(.cal-cell.empty:hover) { transform: none; box-shadow: none; border-color: #e5e7eb; }

  .donut-wrap { display: flex; flex-direction: column; align-items: center; gap: 1.5rem; padding: 1rem 0; }
  .donut { width: 280px; height: 280px; border-radius: 50%; background: conic-gradient(#e5e7eb 0deg, #e5e7eb 360deg); display: grid; place-items: center; position: relative; box-shadow: inset 0 2px 6px rgba(0,0,0,0.08), 0 10px 20px rgba(15,23,42,0.08); }
  .donut-center { width: 150px; height: 150px; background: #ffffff; border-radius: 50%; display: grid; place-items: center; text-align: center; box-shadow: inset 0 1px 0 rgba(255,255,255,0.8); }
  .donut-number { font-size: 2rem; font-weight: 800; color: #0f172a; }
  .donut-label { font-size: 0.85rem; color: #6b7280; text-transform: uppercase; letter-spacing: 0.04em; }
  .legend { display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 0.5rem; font-size: 0.9rem; color: #0f172a; width: 100%; max-width: 500px; }
  :global(.legend-item) { display: flex; align-items: center; gap: 0.6rem; justify-content: space-between; padding: 0.45rem 0.6rem; border-radius: 10px; border: 1px solid #e5e7eb; background: #f8fafc; }
  :global(.legend-left) { display: flex; align-items: center; gap: 0.5rem; }
  :global(.dot) { width: 12px; height: 12px; border-radius: 50%; box-shadow: 0 0 0 2px #fff, 0 0 0 4px rgba(0,0,0,0.06); }
  :global(.legend-perc) { font-weight: 700; color: #0a4ba5; }
  .placeholder { padding: 1rem; text-align: center; color: #6b7280; background: #f8fafc; border-radius: 12px; border: 1px dashed #e5e7eb; }

  @media (max-width: 1100px) {
    .charts-grid { grid-template-columns: 1fr; }
    .donut-wrap { grid-template-columns: 1fr; justify-items: center; }
  }
</style>
