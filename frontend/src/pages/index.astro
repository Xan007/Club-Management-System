---
import BaseLayout from '../layouts/BaseLayout.astro'
import logoClub from 'src/assets/logo_corpmeta.png'
import heroBackground from 'src/assets/fondoclub.png'
---

<BaseLayout title="Corporacion Club del Meta">
  <section class="hero" aria-labelledby="hero-heading">
    <div
      class="hero__background"
      aria-hidden="true"
      style={`background-image: linear-gradient(rgba(4, 14, 32, 0.15), rgba(4, 14, 32, 0.4)), url(${heroBackground.src});`}
    ></div>
    <div class="hero__layer" aria-hidden="true"></div>

    <div class="hero__wrap">
      <header class="hero__header">
        <div class="hero__identity">
          <img src={logoClub.src} alt="Logo Corporacion Club del Meta" class="hero__logo" />
          <span class="hero__name">Corporacion Club del Meta</span>
        </div>
        <nav class="hero__languages" aria-label="Selector de idioma">
          <a href="#" class="hero__language hero__language--active">ES</a>
          <a href="#" class="hero__language">EN</a>
        </nav>
      </header>

      <div class="hero__content">
        <div class="hero__eyebrow">Tu club, tu horario, tu comunidad</div>
        <h1 id="hero-heading" class="hero__headline">
          <span class="hero__headline-top">El match</span>
          <span class="hero__headline-bottom">perfecto para tu club</span>
        </h1>
        <p class="hero__subtitle">
          Gestiona y reserva canchas, salones y eventos del Club del Meta en segundos. Conecta a socios, controla
          calendarios y garantiza la mejor experiencia deportiva.
        </p>

        <div class="hero__actions">
          <a class="hero__cta" href="/reservas">Reserva tu cancha aqui</a>
          <a class="hero__secondary" href="mailto:contacto@clubdelmeta.com">
            Soy administrador, deseo informacion para mi club
          </a>
        </div>

        <div class="hero__stores" aria-label="Descargar apps">
          <a class="hero__store" href="#">
            <span class="hero__store-icon" aria-hidden="true">APP</span>
            <span class="hero__store-text">
              <span class="hero__store-small">Disponible en</span>
              <span class="hero__store-name">App Store</span>
            </span>
          </a>
          <a class="hero__store" href="#">
            <span class="hero__store-icon" aria-hidden="true">GP</span>
            <span class="hero__store-text">
              <span class="hero__store-small">Disponible en</span>
              <span class="hero__store-name">Google Play</span>
            </span>
          </a>
          <a class="hero__store" href="#">
            <span class="hero__store-icon" aria-hidden="true">AG</span>
            <span class="hero__store-text">
              <span class="hero__store-small">Disponible en</span>
              <span class="hero__store-name">AppGallery</span>
            </span>
          </a>
        </div>
      </div>

      <a class="hero__support" href="mailto:alianzas@clubdelmeta.com">
        Soy administrador o propietario de un club, deseo unirme al ecosistema del Club del Meta
      </a>
    </div>
  </section>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Outfit:wght@400;500;600;700&display=swap');

    :global(body) {
      font-family: 'Outfit', sans-serif;
    }

    .hero {
      position: relative;
      min-height: clamp(560px, 90vh, 760px);
      border-radius: 28px;
      overflow: hidden;
      color: #ffffff;
      display: flex;
      align-items: center;
      justify-content: center;
  padding: clamp(2.5rem, 6vw, 4.5rem);
  background: #07193a;
    }

    .hero__background {
      position: absolute;
      inset: 0;
      background-size: cover;
      background-position: center;
    }

    .hero__layer {
      position: absolute;
      inset: 0;
      background: linear-gradient(110deg, rgba(8, 27, 68, 0.9), rgba(8, 27, 68, 0.6) 48%, rgba(16, 36, 78, 0.35));
    }

    .hero__wrap {
      position: relative;
      display: grid;
      gap: clamp(2rem, 5vw, 3rem);
      max-width: min(1100px, 92vw);
      width: 100%;
    }

    .hero__header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
    }

    .hero__identity {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .hero__logo {
      width: clamp(96px, 10vw, 140px);
      height: auto;
      filter: drop-shadow(0 10px 18px rgba(0, 0, 0, 0.35));
    }

    .hero__name {
      font-size: clamp(1.4rem, 3vw, 2.2rem);
      font-weight: 600;
      letter-spacing: 0.04em;
      text-transform: uppercase;
    }

    .hero__languages {
      display: inline-flex;
      gap: 0.65rem;
      background: rgba(255, 255, 255, 0.12);
      padding: 0.45rem;
      border-radius: 999px;
      backdrop-filter: blur(6px);
    }

    .hero__language {
      font-size: 0.95rem;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.75);
      text-decoration: none;
      padding: 0.45rem 0.95rem;
      border-radius: 999px;
      transition: background 0.2s ease, color 0.2s ease;
    }

    .hero__language--active,
    .hero__language:hover {
      background: #ffffff;
      color: #0a1e4a;
    }

    .hero__content {
      display: grid;
      gap: 1.6rem;
      max-width: min(640px, 90%);
    }

    .hero__eyebrow {
      text-transform: uppercase;
      letter-spacing: 0.25em;
      font-size: 0.85rem;
      font-weight: 600;
      color: rgba(255, 255, 255, 0.8);
    }

    .hero__headline {
      margin: 0;
      line-height: 1;
      display: grid;
      gap: 0.15em;
      text-transform: uppercase;
    }

    .hero__headline-top {
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(3rem, 7vw, 4.2rem);
      letter-spacing: 0.18em;
      color: #ff2b6d;
    }

    .hero__headline-bottom {
      font-family: 'Bebas Neue', sans-serif;
      font-size: clamp(3.2rem, 7.5vw, 5.1rem);
      letter-spacing: 0.2em;
    }

    .hero__subtitle {
      margin: 0;
      font-size: clamp(1.05rem, 2.3vw, 1.2rem);
      line-height: 1.8;
      color: rgba(255, 255, 255, 0.88);
    }

    .hero__actions {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .hero__cta {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 1rem 2.4rem;
      border-radius: 999px;
      background: #ffffff;
      color: #0a1e4a;
      font-weight: 600;
      text-decoration: none;
      letter-spacing: 0.08em;
      box-shadow: 0 18px 30px rgba(0, 0, 0, 0.28);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .hero__cta:hover {
      transform: translateY(-2px);
      box-shadow: 0 22px 38px rgba(0, 0, 0, 0.32);
    }

    .hero__secondary {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 1rem 2rem;
      border-radius: 999px;
      background: rgba(9, 21, 50, 0.62);
      color: #ffffff;
      text-decoration: none;
      font-weight: 500;
      border: 1px solid rgba(255, 255, 255, 0.25);
      transition: background 0.2s ease, transform 0.2s ease;
    }

    .hero__secondary:hover {
      background: rgba(9, 21, 50, 0.78);
      transform: translateY(-1px);
    }

    .hero__stores {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .hero__store {
      display: inline-flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.65rem 1.4rem;
      border-radius: 14px;
      background: rgba(7, 24, 60, 0.7);
      text-decoration: none;
      color: #ffffff;
      border: 1px solid rgba(255, 255, 255, 0.18);
      transition: background 0.2s ease, border-color 0.2s ease;
  font-family: 'Outfit', sans-serif;
    }

    .hero__store:hover {
      background: rgba(7, 28, 72, 0.95);
      border-color: rgba(255, 255, 255, 0.35);
    }

    .hero__store-icon {
      font-size: 1.6rem;
      line-height: 1;
    }

    .hero__store-text {
      display: flex;
      flex-direction: column;
      line-height: 1.2;
    }

    .hero__store-small {
      font-size: 0.7rem;
      letter-spacing: 0.06em;
      text-transform: uppercase;
      color: rgba(255, 255, 255, 0.65);
    }

    .hero__store-name {
      font-size: 1rem;
      font-weight: 600;
    }

    .hero__support {
      margin-top: auto;
      justify-self: end;
      max-width: 420px;
      padding: 0.95rem 1.4rem;
      border-radius: 999px;
      background: rgba(255, 255, 255, 0.14);
      color: #ffffff;
      text-decoration: none;
      font-weight: 500;
      border: 1px solid rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(6px);
      transition: background 0.2s ease;
    }

    .hero__support:hover {
      background: rgba(255, 255, 255, 0.22);
    }

    @media (max-width: 900px) {
      .hero {
        border-radius: 20px;
        padding: clamp(2rem, 8vw, 3rem);
      }

      .hero__header {
        flex-direction: column;
        align-items: flex-start;
      }

      .hero__support {
        justify-self: stretch;
      }
    }

    @media (max-width: 620px) {
      .hero__languages {
        align-self: flex-start;
      }

      .hero__content {
        max-width: 100%;
      }

      .hero__actions,
      .hero__stores {
        flex-direction: column;
        align-items: stretch;
      }
    }
  </style>
</BaseLayout>
