---
import BaseLayout from '../layouts/BaseLayout.astro'
import millanuraImg from '../assets/millanura.jpg'
import barImg from '../assets/bar.jpg'
import empresarialImg from '../assets/empresarial.jpg'
import terrazaImg from '../assets/terraza.jpg'
import kioskoImg from '../assets/kiosko.jpg'
import presidencialImg from '../assets/presidencial.jpg'

// Mapeo de imágenes por nombre de espacio
const imageMap = {
  'MI LLANURA': millanuraImg,
  'BAR': barImg,
  'EMPRESARIAL': empresarialImg,
  'TERRAZA': terrazaImg,
  'KIOSKO': kioskoImg,
  'PRESIDENTE': presidencialImg,
}

const descriptions = {
  'MI LLANURA': 'Salón insignia con vista a las áreas verdes, ambientación adaptable. Ideal para recepciones y eventos sociales.',
  'BAR': 'Ambiente contemporáneo con barra integrada, iluminación escénica y sistema de sonido premium. Perfecto para cocteles y lanzamientos.',
  'EMPRESARIAL': 'Equipado con pantallas, streaming y mobiliario modular para workshops, conferencias y directorios. Conectividad y soporte técnico continuo.',
  'TERRAZA': 'Espacio al aire libre con pérgolas, iluminación ambiental y vista privilegiada. Eventos sunset, matrimonios y brunchs.',
  'KIOSKO': 'Área semiabierta rodeada de jardines, piso en deck y estaciones eléctricas para música en vivo. Reuniones familiares y celebraciones.',
  'PRESIDENTE': 'Espacio exclusivo con mobiliario ejecutivo, insonorización y servicio gourmet personalizado. Juntas corporativas y sesiones privadas.',
}

// Datos estáticos de fallback (solo se usan si falla el backend)
const espacios = [
  {
    nombre: 'MI LLANURA',
    descripcion: descriptions['MI LLANURA'],
    aforo: 'Hasta 100 personas',
    imagen: millanuraImg,
  },
  {
    nombre: 'BAR',
    descripcion: descriptions['BAR'],
    aforo: 'Hasta 60 personas',
    imagen: barImg,
  },
  {
    nombre: 'EMPRESARIAL',
    descripcion: descriptions['EMPRESARIAL'],
    aforo: 'Hasta 35 personas',
    imagen: empresarialImg,
  },
  {
    nombre: 'TERRAZA',
    descripcion: descriptions['TERRAZA'],
    aforo: 'Hasta 30 personas',
    imagen: terrazaImg,
  },
  {
    nombre: 'KIOSKO',
    descripcion: descriptions['KIOSKO'],
    aforo: 'Hasta 60 personas',
    imagen: kioskoImg,
  },
  {
    nombre: 'PRESIDENTE',
    descripcion: descriptions['PRESIDENTE'],
    aforo: 'Hasta 15 personas',
    imagen: presidencialImg,
  },
]
---

<BaseLayout title="Reservas - Club del Meta">
  <section class="reservas">
    <header class="reservas__header">
      <h1>Agenda tu espacio en el Club</h1>
      <p>
        Selecciona uno de los ambientes disponibles y comienza el proceso de reserva. Nuestro equipo confirmará la
        disponibilidad y te acompañará en cada detalle del evento.
      </p>
    </header>

    <div class="reservas-grid" id="espacios-grid" role="list">
      {espacios.map((espacio) => (
        <article class="reserva-card" role="listitem" style={`background-image: url(${espacio.imagen.src})`}>
          <div class="reserva-card__overlay">
            <header class="reserva-card__header">
              <span class="reserva-card__badge">{espacio.aforo}</span>
              <h2>{espacio.nombre}</h2>
            </header>
            <p>{espacio.descripcion}</p>
            <a
              class="cotizar-btn"
              href={`/obtener-cotizacion?salon=${encodeURIComponent(espacio.nombre)}`}
              aria-label={`Obtener cotización - ${espacio.nombre}`}
            >
              Obten cotizacion
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <script>
    // Cargar espacios desde el backend
    const API_URL = 'http://localhost:3333';
    const imageMap = {
      'MI LLANURA': '/src/assets/millanura.jpg',
      'BAR': '/src/assets/bar.jpg',
      'EMPRESARIAL': '/src/assets/empresarial.jpg',
      'TERRAZA': '/src/assets/terraza.jpg',
      'KIOSKO': '/src/assets/kiosko.jpg',
      'PRESIDENTE': '/src/assets/presidencial.jpg',
    };

    const descriptions = {
      'MI LLANURA': 'Salón insignia con vista a las áreas verdes, ambientación adaptable. Ideal para recepciones y eventos sociales.',
      'BAR': 'Ambiente contemporáneo con barra integrada, iluminación escénica y sistema de sonido premium. Perfecto para cocteles y lanzamientos.',
      'EMPRESARIAL': 'Equipado con pantallas, streaming y mobiliario modular para workshops, conferencias y directorios. Conectividad y soporte técnico continuo.',
      'TERRAZA': 'Espacio al aire libre con pérgolas, iluminación ambiental y vista privilegiada. Eventos sunset, matrimonios y brunchs.',
      'KIOSKO': 'Área semiabierta rodeada de jardines, piso en deck y estaciones eléctricas para música en vivo. Reuniones familiares y celebraciones.',
      'PRESIDENTE': 'Espacio exclusivo con mobiliario ejecutivo, insonorización y servicio gourmet personalizado. Juntas corporativas y sesiones privadas.',
    };

    async function cargarEspacios() {
      try {
        const response = await fetch(`${API_URL}/api/espacios/simplificado`);
        const result = await response.json();
        
        if (result.success && result.data) {
          const grid = document.getElementById('espacios-grid');
          if (!grid) return;
          
          // En lugar de reemplazar innerHTML, actualizamos los datos sin perder la estructura CSS
          const cards = grid.querySelectorAll('.reserva-card');
          
          result.data.forEach((espacio, index) => {
            const card = cards[index];
            if (card) {
              const imagen = imageMap[espacio.nombre] || '/src/assets/millanura.jpg';
              const descripcion = descriptions[espacio.nombre] || 'Espacio exclusivo para eventos especiales.';
              const aforo = `Hasta ${espacio.capacidadMaxima} personas`;
              
              // Actualizar atributos sin perder clases y estilos
              card.style.backgroundImage = `url(${imagen})`;
              
              const badge = card.querySelector('.reserva-card__badge');
              const title = card.querySelector('h2');
              const desc = card.querySelector('p');
              const link = card.querySelector('.cotizar-btn');
              
              if (badge) badge.textContent = aforo;
              if (title) title.textContent = espacio.nombre;
              if (desc) desc.textContent = descripcion;
              if (link) {
                link.href = `/obtener-cotizacion?salon=${encodeURIComponent(espacio.nombre)}`;
                link.setAttribute('aria-label', `Obtener cotización - ${espacio.nombre}`);
                link.textContent = 'Obten cotizacion';
              }
            }
          });
        }
      } catch (error) {
        console.error('Error cargando espacios desde backend:', error);
        // Si falla, mantener el HTML estático renderizado por Astro
      }
    }

    // Cargar datos al iniciar
    cargarEspacios();
  </script>

  <style>
    .reservas {
      display: grid;
      gap: 2.5rem;
      padding-top: 2rem;
    }

    .reservas__header h1 {
      margin: 0 0 1rem;
      font-size: clamp(2.5rem, 6vw, 4.5rem);
      color: #1f2937;
      font-weight: 700;
      text-align: center;
    }

    .reservas__header p {
      margin: 0 auto;
      line-height: 1.6;
      color: #4b5563;
      max-width: 620px;
      text-align: center;
      font-size: 1.05rem;
    }

    .reservas-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 2.5rem;
      max-width: 1600px;
      margin: 0 auto;
      width: 100%;
      align-items: stretch;
    }

    .reserva-card {
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.04);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
      display: flex;
      scroll-snap-align: start;
      min-height: 380px; /* slightly more compact */
      position: relative;
      overflow: hidden;
      transition: transform 0.22s cubic-bezier(.2,.9,.2,1), box-shadow 0.22s ease, border-color 0.22s ease;
      transform-origin: center center;
      will-change: transform;
    }

    .reserva-card:hover {
      transform: scale(1.06) translateY(-5px); /* reduced hover scale */
      box-shadow: 0 12px 36px rgba(0, 0, 0, 0.45);
      z-index: 10;
      border-color: rgba(10, 75, 165, 0.18);
    }

    .reserva-card:hover h2 {
      transform: scale(1.05);
      letter-spacing: 0.1em;
    }

    .reserva-card:hover .reserva-card__highlight {
      transform: translateY(2px);
      opacity: 1;
    }

    .reserva-card__overlay {
      background: linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.3) 0%,
        rgba(0, 0, 0, 0.5) 40%,
        rgba(0, 0, 0, 0.75) 100%
      );
      padding: 2.5rem 2rem;
      position: relative;
      display: flex;
      flex-direction: column;
      gap: 1.1rem;
      width: 100%;
    }

    .reserva-card__header {
      display: grid;
      gap: 0.45rem; /* reduce space between header items */
    }

    .reserva-card h2 {
      margin: 0;
      color: #ffffff;
      font-size: 2rem; /* much larger title on desktop */
      text-transform: uppercase;
      letter-spacing: 0.06em;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
      font-weight: 700;
      line-height: 1;
      transition: transform 0.18s ease, letter-spacing 0.18s ease;
      transform-origin: left center;
    }

    .reserva-card__badge {
      justify-self: start;
      align-self: start;
      padding: 0.5rem 1.1rem;
      border-radius: 999px;
      background: #ffffff;
      color: #1f2937;
      font-size: 0.8rem;
      font-weight: 700;
      letter-spacing: 0.03em;
      text-transform: uppercase;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    }

    .reserva-card__highlight {
      margin: 0;
      font-weight: 600;
      font-size: 0.96rem;
      color: #ffffff;
      letter-spacing: 0.01em;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
      transition: transform 0.18s ease, opacity 0.18s ease;
      transform: translateY(0);
      opacity: 0.96;
    }

    .reserva-card p {
      margin: 0;
      color: #ffffff;
      line-height: 1.6;
      font-size: 1rem;
      text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
      flex: 1;
      display: block;
    }

    .reserva-card button {
      align-self: flex-start;
      padding: 0.8rem 2.2rem;
      border-radius: 999px;
      border: none;
      background: #0a4ba5;
      color: #ffffff;
      font-weight: 600;
      cursor: pointer;
      letter-spacing: 0.02em;
      transition: all 0.2s ease;
      box-shadow: 0 8px 16px rgba(10, 75, 165, 0.3);
      margin-top: auto;
      font-size: 1rem;
    }

    .reserva-card .cotizar-btn {
      display: inline-flex;
      text-decoration: none;
      padding: 0.7rem 2rem;
      border-radius: 999px;
      background: #0a4ba5;
      color: #ffffff;
      font-weight: 600;
      box-shadow: 0 8px 18px rgba(10, 75, 165, 0.28);
      font-size: 0.98rem;
      transition: transform 0.16s ease, box-shadow 0.16s ease, background 0.16s ease;
      align-items: center;
      justify-content: center;
      gap: .5rem;
      min-width: 220px;
      position: absolute;
      left: 2rem;
      bottom: 1.6rem;
    }

    .reserva-card .cotizar-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 24px rgba(10, 75, 165, 0.36);
      background: #0842a0;
    }

    .reserva-card button:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 20px rgba(10, 75, 165, 0.4);
      background: #0842a0;
    }

    @media (max-width: 640px) {
      .reservas-grid {
        grid-template-columns: 1fr;
        max-width: 100%;
        gap: 1rem;
      }

      .reserva-card {
        min-height: 320px;
      }

      .reserva-card__overlay {
        padding: 2rem 1.75rem;
        gap: 1rem;
      }

      .reserva-card h2 {
        font-size: 1.6rem; /* larger on tablet/mobile but still balanced */
      }

      .reserva-card__badge {
        font-size: 0.72rem;
        padding: 0.4rem 0.95rem;
      }

      .reserva-card__highlight {
        font-size: 0.95rem;
      }

      .reserva-card p {
        font-size: 0.9rem;
        line-height: 1.55;
      }

      .reserva-card button,
      .reserva-card .cotizar-btn {
        width: 100%;
        align-self: stretch;
        padding: 0.6rem 1rem;
        font-size: 0.95rem;
      }

      .reserva-card .cotizar-btn {
        position: static; /* place inline in mobile layout */
      }

      .reservas__header h1 {
        font-size: 2rem;
      }

      .reservas__header p {
        font-size: 0.95rem;
      }
    }

    @media (max-width: 480px) {
      .reserva-card {
        min-height: 460px;
      }

      .reserva-card__overlay {
        padding: 1.75rem 1.5rem;
        gap: 0.9rem;
      }

      .reserva-card h2 {
        font-size: 1.3rem;
      }

      .reserva-card__badge {
        font-size: 0.7rem;
        padding: 0.4rem 0.9rem;
      }

      .reserva-card__highlight {
        font-size: 0.9rem;
      }

      .reserva-card p {
        font-size: 0.875rem;
        line-height: 1.5;
      }

      .reserva-card button,
      .reserva-card .cotizar-btn {
        padding: 0.7rem 1rem;
        font-size: 0.9rem;
      }

      .reserva-card .cotizar-btn {
        position: static;
      }

      .reservas__header h1 {
        font-size: 2rem;
      }

      .reservas__header p {
        font-size: 0.9rem;
      }
    }
  </style>

</BaseLayout>
