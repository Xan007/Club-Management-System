---
import BaseLayout from '../layouts/BaseLayout.astro'

const API_URL = import.meta.env.PUBLIC_BACKEND_URL || 'http://localhost:3333'

// Obtener espacios desde la API
let salonesData = []
try {
  const response = await fetch(`${API_URL}/api/espacios`)
  const result = await response.json()
  
  if (result.success && result.data) {
    // Mapear a estructura compatible
    salonesData = result.data.map((espacio: any) => ({
      id: espacio.id,
      nombre: espacio.nombre,
      slug: espacio.slug,
      subtitulo: espacio.subtitulo || '',
      descripcionCorta: espacio.descripcion || '',
      capacidad: {
        minima: espacio.capacidad_minima || 0,
        maxima: espacio.capacidad_maxima || 0
      },
      imagenes: espacio.imagenes || [],
      precioDesde: espacio.precio_desde || 'Consultar',
      destacado: espacio.destacado || false
    }))
  }
} catch (error) {
  console.error('Error cargando espacios:', error)
}
---

<BaseLayout title="Nuestros Salones - Club del Meta">
  <section class="salones">
    <header class="salones__header">
      <h1>Nuestros Salones</h1>
      <p>
        Descubre los espacios únicos del Club del Meta. Cada salón tiene su propia personalidad 
        y está diseñado para hacer de tu evento una experiencia memorable.
      </p>
    </header>

    <div class="salones-grid">
      {salonesData.map((salon) => (
        <article class="salon-card" data-destacado={salon.destacado} style={`background-image: url(${salon.imagenes[0]?.url || '/src/assets/millanura.jpg'})`}>
          <div class="salon-card__overlay">
            <div class="salon-card__header">
              {salon.destacado && <span class="salon-card__destacado">Destacado</span>}
              <span class="salon-card__capacidad">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                {salon.capacidad.minima} - {salon.capacidad.maxima} personas
              </span>
              <h2>{salon.nombre}</h2>
            </div>
            <p class="salon-card__subtitulo">{salon.subtitulo}</p>
            <p class="salon-card__descripcion">{salon.descripcionCorta}</p>
            <div class="salon-card__footer">
              <span class="salon-card__precio">Desde {salon.precioDesde}</span>
              <a href={`/salones/${salon.slug}`} class="salon-card__btn">
                Ver más detalles
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .salones {
    padding: 2rem 0;
    position: relative;
    min-height: 100vh;
  }

  .salones__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .salones__header h1 {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    color: var(--color-primary);
    margin: 0 0 1rem;
    font-weight: 700;
  }

  .salones__header p {
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .salones-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2.5rem 2rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  .salon-card {
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-height: 420px;
    position: relative;
    display: flex;
  }

  .salon-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.18), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
  }

  .salon-card[data-destacado="true"] .salon-card__overlay {
    border: 2px solid var(--color-accent);
    border-radius: 16px;
  }

  .salon-card__overlay {
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.3) 0%,
      rgba(0, 0, 0, 0.5) 40%,
      rgba(0, 0, 0, 0.75) 100%
    );
    padding: 2rem;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    justify-content: space-between;
  }

  .salon-card__destacado {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    width: fit-content;
  }

  .salon-card__header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .salon-card__header h2 {
    font-size: 2rem;
    color: #ffffff;
    margin: 0;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
    line-height: 1.1;
    transition: letter-spacing 0.18s ease;
  }

  .salon-card:hover .salon-card__header h2 {
    letter-spacing: 0.08em;
  }

  .salon-card__capacidad {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    color: #ffffff;
    font-size: 0.85rem;
    font-weight: 600;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
    padding: 0.5rem 1.1rem;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(8px);
    width: fit-content;
  }

  .salon-card__capacidad svg {
    color: #ffffff;
  }

  .salon-card__subtitulo {
    color: #ffffff;
    font-weight: 600;
    margin: 0;
    font-size: 1rem;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
    letter-spacing: 0.01em;
  }

  .salon-card__descripcion {
    color: #ffffff;
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
    flex: 1;
  }

  .salon-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-top: auto;
  }

  .salon-card__precio {
    font-weight: 700;
    color: #ffffff;
    font-size: 1.1rem;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
  }

  .salon-card__btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #ffffff;
    background: #0a4ba5;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    padding: 0.7rem 1.5rem;
    border-radius: 999px;
    transition: all 0.2s ease;
    box-shadow: 0 8px 18px rgba(10, 75, 165, 0.28);
  }

  .salon-card__btn:hover {
    gap: 0.75rem;
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(10, 75, 165, 0.36);
    background: #0842a0;
  }

  .salon-card__btn svg {
    transition: transform 0.2s ease;
  }

  .salon-card__btn:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .salones-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .salon-card {
      min-height: 380px;
    }
  }

  @media (max-width: 768px) {
    .salones__header h1 {
      font-size: 2rem;
    }

    .salones-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .salon-card {
      min-height: 400px;
    }

    .salon-card__overlay {
      padding: 1.75rem 1.5rem;
    }

    .salon-card__header h2 {
      font-size: 1.75rem;
    }

    .salon-card__capacidad {
      font-size: 0.8rem;
      padding: 0.4rem 0.95rem;
    }

    .salon-card__footer {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .salon-card__btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .salon-card {
      min-height: 420px;
    }

    .salon-card__overlay {
      padding: 1.5rem 1.25rem;
      gap: 0.85rem;
    }

    .salon-card__header h2 {
      font-size: 1.5rem;
    }

    .salon-card__subtitulo {
      font-size: 0.9rem;
    }

    .salon-card__descripcion {
      font-size: 0.875rem;
    }

    .salon-card__precio {
      font-size: 1rem;
    }

    .salon-card__btn {
      font-size: 0.85rem;
      padding: 0.6rem 1.25rem;
    }
  }
</style>
